<% if current_swiper %>
  <div class="row text-center tall-tittle">
    <h4><%= notice %></h4>
  </div>
  <div class="row text-center tall-tittle">
    <h1>Home</h1>
  </div>
  <div class="row text-center">
    <div class="col-md-4 tall-content align-middle" ></div>
    <div class="col-md-4 tall-content align-middle">
      <div class="row"><%= link_to "Swipe", aceptando_path(current_swiper.id), :class => "btn btn-primary btn-menu" %></div>

      <div class="row"><%= link_to "Perfil", swiper_path(current_swiper.id) , :class => "btn btn-primary btn-menu"%></div>

      <div class="row"><%= link_to "Matches", lista_matchs_path(current_swiper.id), :class => "btn btn-primary btn-menu" %></div>

      <div class="row"><%= link_to "Citas", menu_citas_path, :class => "btn btn-primary btn-menu" %></div>

      <div class="row"><%= link_to "Restaurantes", restaurantes_path, :class => "btn btn-primary btn-menu" %></div>

      <div class="row"><%= link_to "Cerrar sesión", destroy_swiper_session_path, method: :delete, data: {confirm: '¿Estás seguro que quieres cerrar sesión?'}, :class => "btn btn-primary btn-menu" %></div>
    </div>
    <div class="col-md-4 tall-content align-middle" ></div>
  </div>
  <div class="row">
  </div>

<% else %>
  <div class="row text-center tall-tittle">
    <h4><%= notice %></h4>
  </div>
  <div class="row text-center tall-tittle">
    <h1>Descubre un mundo de sabores</h1>
  </div>
  <div class="row text-center">
    <div class="col-md-6 tall-content align-middle">
      <%= image_tag("logo.png", :alt => "Logo", style: "height: 357px; width: 613px;") %>
    </div>
    <div class="col-md-6 tall-content align-middle" >
      <div class="row"><%= link_to "Log in", choose_login_path, :class => "btn btn-primary" %></div>
      <div class="row"><%= link_to "Registrate", choose_registration_path, :class => "btn btn-primary" %></div>
    </div>
  </div>
    <div class="row text-center" style="margin-top: 10vh;"><%= link_to "Ver Restaurantes", lista_restaurantes_path, :class => "btn btn-primary" %></div>
<% end %>
