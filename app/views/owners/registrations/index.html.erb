<% if current_admin %>
  <div class="row text-center tall-tittle">
    <h4><%= notice %></h4>
  </div>
    
  <h1>Lista de Owners</h1>

  <h3 style="margin: 0px; margin-bottom: -17px;"> Ordenar por: </h3>
  <table>
      <tbody>
          <tr>
              <td>
                  <%= form_tag(controller: 'owners/registrations', action: "filtro", method: "post") do %>
                      <div class="field">
                          <%= hidden_field_tag(:filtro, "o_nombre") %><br>
                      </div>
                      <div class="actions">
                          <%= submit_tag("Nombre") %><br><br>
                      </div>
                  <% end %>
              </td>
              <td>
                  <%= form_tag(controller: 'owners/registrations', action: "filtro", method: "post") do %>
                      <div class="field">
                          <%= hidden_field_tag(:filtro, "o_correo") %><br>
                      </div>
                      <div class="actions">
                          <%= submit_tag("Correo") %><br><br>
                      </div>
                  <% end %>
              </td>
          </tr>
      </tbody>
  </table>

  <table>
    <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.nombre %></td>
        <td><%= owner.email %></td>
        <td><%= link_to 'Ver detalles', owner_path(owner.id) %></td>
      </tr>
    <%end%>
    </tbody>
  </table>
  <br>

  <table>
      <thead>
          <tr>
              <th>Filtrar por nombre</th>
              <th>Filtrar por correo</th>
          </tr>
      </thead>
      <tbody>
          <tr>
              <td>
                  <%= form_tag(controller: 'owners/registrations', action: "filtro", method: "post") do %>
                      <div class="field">
                          <%= text_field_tag(:input) %>
                      </div>
                      <div class="field">
                          <%= hidden_field_tag(:filtro, "nombre") %><br>
                      </div>
                      <div class="actions">
                          <%= submit_tag("Filtrar") %><br><br>
                      </div>
                  <% end %>
              </td>
              <td>
                  <%= form_tag(controller: 'owners/registrations', action: "filtro", method: "post") do %>
                      <div class="field">
                          <%= text_field_tag(:input) %>
                      </div>
                      <div class="field">
                          <%= hidden_field_tag(:filtro, "correo") %><br>
                      </div>
                      <div class="actions">
                          <%= submit_tag("Filtrar") %><br><br>
                      </div>
                  <% end %>
              </td>
          </tr>
      </tbody>
  </table>

  <%= link_to 'Volver a la lista de acciones disponibles', admin_root_path %>
<% else %>
  <% controller.redirect_to new_admin_session_path %>
<% end%>
