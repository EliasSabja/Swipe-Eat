<% if current_admin %>
    <p id="notice">
        <% if (notice != 'Guardado') and (notice)%>
            <h2>ERROR:</h2>
            <% if notice["nombre"] %>
                <%= notice["nombre"][0] %><br>
            <% end %>
        <% elsif notice == 'Guardado'%>
            <%= 'Comuna guardada exitosamente.' %><br>
        <% end %>
    </p>

    <h1>Nueva Comuna</h1>

    <%= form_with(model: @comuna, local: true, method: :post) do |form| %>
        <div class="field">
            <%= form.label :nombre %>
            <%= form.text_field :nombre %>
        </div>
        <div class="field">
            <%= form.label :cuarentena %>
            <%= form.select :cuarentena, options_for_select(["true", "false"]) %>
        </div>
        <div class="actions">
            <%= form.submit %>
        </div>
    <% end %>

    <br>

    <%= link_to 'Lista Comunas', lista_comunas_path %>
<% else %>
    <% controller.redirect_to new_admin_session_path %>
<% end %>
