<% if current_admin %>
  <div class="row text-center tall-tittle">
    <h4><%= notice %></h4>
  </div>
  
  <h1>Gustos</h1>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @gustos.each do |gusto| %>
        <tr>
          <td><%= gusto.nombre %></td>
          <td><%= link_to "Ver detalles", gusto_path(gusto.id) %></td>

        </tr>
      <% end %>
    </tbody>
  </table><br>
  <%= link_to "Agregar gusto", gustos_new_path %>
  <br><br>
  <%= link_to "Volver a la lista de acciones disponibles", admin_root_path %>
<% else %>
  <% controller.redirect_to new_admin_session_path %>
<% end %>