<% if current_admin %>
    <div class="row text-center tall-tittle">
        <h4><%= notice %></h4>
    </div>
    
    <h1>Lista de Swipers</h1>

    <h3 style="margin: 0px; margin-bottom: -17px;"> Ordenar por: </h3>
    <table>
        <tbody>
            <tr>
                <td>
                    <%= form_tag(controller: 'swipers/registrations', action: "filtro", method: "post") do %>
                        <div class="field">
                            <%= hidden_field_tag(:filtro, "o_nombre") %><br>
                        </div>
                        <div class="actions">
                            <%= submit_tag("Nombre") %><br><br>
                        </div>
                    <% end %>
                </td>
                <td>
                    <%= form_tag(controller: 'swipers/registrations', action: "filtro", method: "post") do %>
                        <div class="field">
                            <%= hidden_field_tag(:filtro, "o_correo") %><br>
                        </div>
                        <div class="actions">
                            <%= submit_tag("Correo") %><br><br>
                        </div>
                    <% end %>
                </td>
            </tr>
        </tbody>
    </table>

    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Edad</th>
                <th>Cumpleaños</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th>Comuna</th> 
                <th>Descripción</th>        
            </tr>
        </thead>
        <tbody>
            <% @swipers.each do |swiper| %>
                <tr>
                    <td><%= swiper.nombre %></td>
                    <td><%= swiper.email %></td>
                    <td><%= swiper.edad %></td>
                    <td><%= swiper.cumpleanos.strftime("%d/%m") %></td>
                    <td><%= swiper.telefono %></td>
                    <td><%= swiper.direccion %></td>
                    <td><%= swiper.comuna.nombre%></td>
                    <td><%= swiper.descripcion %></td>
                    <td><%= link_to 'Ver detalles', swiper_path(swiper.id) %></td>
                </tr>
            <%end%>
        </tbody>
    </table>
    <br>

    <table>
        <thead>
            <tr>
                <th>Filtrar por nombre</th>
                <th>Filtrar por correo</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <%= form_tag(controller: 'swipers/registrations', action: "filtro", method: "post") do %>
                        <div class="field">
                            <%= text_field_tag(:input) %>
                        </div>
                        <div class="field">
                            <%= hidden_field_tag(:filtro, "nombre") %><br>
                        </div>
                        <div class="actions">
                            <%= submit_tag("Filtrar") %><br><br>
                        </div>
                    <% end %>
                </td>
                <td>
                    <%= form_tag(controller: 'swipers/registrations', action: "filtro", method: "post") do %>
                        <div class="field">
                            <%= text_field_tag(:input) %>
                        </div>
                        <div class="field">
                            <%= hidden_field_tag(:filtro, "correo") %><br>
                        </div>
                        <div class="actions">
                            <%= submit_tag("Filtrar") %><br><br>
                        </div>
                    <% end %>
                </td>
            </tr>
        </tbody>
    </table>

    <%= link_to 'Volver a la lista de acciones disponibles', admin_root_path %>
<% else %>
    <% controller.redirect_to new_admin_session_path %>
<% end %>